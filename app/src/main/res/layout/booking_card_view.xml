<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:elevation="8dp"
    app:cardBackgroundColor="@color/vivagym_principal"
    app:cardCornerRadius="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="85dp"
        android:layout_margin="10dp">

        <ImageView
            android:id="@+id/bookingActivityLogo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:contentDescription="@string/activity_logo_contentDescription"
            android:elevation="50dp"
            android:src="@drawable/fitness_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/bookingTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="@font/quicksand_medium"
            android:text="Acceso"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_marginStart="5dp"
            app:layout_constraintBottom_toBottomOf="@+id/bookingActivityLogo"
            app:layout_constraintStart_toEndOf="@+id/bookingActivityLogo"
            app:layout_constraintTop_toTopOf="@+id/bookingActivityLogo" />


        <ImageView
            android:id="@+id/bookingClubLocationIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="2dp"
            android:src="@drawable/ic_location_on_white_18dp"
            app:layout_constraintBottom_toTopOf="@+id/bookingDateIcon"
            app:layout_constraintStart_toStartOf="parent" />


        <TextView
            android:id="@+id/bookingClub"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:ellipsize="end"
            android:fontFamily="@font/quicksand"
            android:text="Gym Club"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/bookingClubLocationIcon"
            app:layout_constraintStart_toEndOf="@+id/bookingClubLocationIcon"
            app:layout_constraintTop_toTopOf="@+id/bookingClubLocationIcon"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/bookingDateIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_schedule_white_18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/bookingDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/quicksand"
            android:text="dd/MM/YYYY HH:mm"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="@+id/bookingDateIcon"
            app:layout_constraintStart_toEndOf="@+id/bookingDateIcon"
            app:layout_constraintTop_toTopOf="@+id/bookingDateIcon" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>